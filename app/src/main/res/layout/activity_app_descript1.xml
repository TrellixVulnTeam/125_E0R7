    <TextView
    android:id="@+id/bigDesc1"
    android:layout_width="321dp"
    android:layout_height="61dp"
    android:fontFamily="sans-serif-black"
    android:text="Pick how you want to spend time on your phone"
    android:textAlignment="center"
    android:textColor="#8BC34A"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.252"
    android:gravity="center_horizontal" />

    <TextView
    android:id="@+id/smallDesc1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="We will create a screen time plan \nthat fits best with your lifestyle."
    android:textAlignment="center"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.654"
    android:gravity="center_horizontal" />

    <ImageView
    android:id="@+id/imageView2"
    android:layout_width="235dp"
    android:layout_height="183dp"
    app:layout_constraintBottom_toTopOf="@+id/smallDesc1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bigDesc1"
    app:srcCompat="@drawable/calendar" />

    <Button
        android:id="@+id/descript1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="NEXT"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallDesc1"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>